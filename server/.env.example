# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/purcmium
# For production: MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/purcmium

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRE=7d

# Admin Credentials (Only for initial setup - change these!)
ADMIN_EMAIL=admin@purcmium.com
ADMIN_PASSWORD=Admin123!@#

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# Security
BCRYPT_ROUNDS=12